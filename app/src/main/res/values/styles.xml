<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button3">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

    <style name="AppTheme.FlatButton">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@android:color/holo_blue_bright</item>
    </style>

    <style name="AppTheme.FlatButton.Primary">
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

</resources>
